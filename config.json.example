{
  "atlas": {
    "public_key": "your_atlas_public_key_here",
    "private_key": "your_atlas_private_key_here",
    "project_id": "your_project_id_here",
    "base_url": "https://cloud.mongodb.com/api/atlas/v2"
  },
  "monitoring": {
    "check_interval": 60,
    "cpu_threshold_high": 80.0,
    "cpu_threshold_low": 30.0,
    "connection_threshold_high": 1000,
    "connection_threshold_low": 100,
    "iops_threshold_high": 1000,
    "iops_threshold_low": 100,
    "memory_threshold_high": 85.0,
    "memory_threshold_low": 40.0
  },
  "scaling": {
    "enabled": true,
    "scale_up_cooldown": 0,
    "scale_down_cooldown": 300,
    "max_scale_up_per_hour": 3,
    "max_scale_down_per_hour": 2,
    "min_instance_size": "M10",
    "max_instance_size": "M80",
    "scale_up_step": "M20",
    "scale_down_step": "M10"
  },
  "alerts": {
    "enabled": true,
    "webhook_url": "https://your-webhook-url.com/atlas-alerts",
    "email_notifications": false,
    "email_recipients": ["admin@yourcompany.com"],
    "slack_webhook": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
  }
}
